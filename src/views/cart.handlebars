<h1 class="cart-header">Carrito de Compras</h1>

<div class="cart-container">
    {{#if productos.length}}
        {{#each productos}}
        <div class="cart-card">
            <div class="card-body">
                <h5 class="card-title">Producto: {{this.product.title}}</h5>
                <p class="card-text">Cantidad: {{this.quantity}}</p>
                <p class="card-text">Precio: ${{this.product.totalPrice}}</p>
                <button onclick="eliminarProducto('{{../cartId}}', '{{this.product._id}}')" class="btn btn-danger">Eliminar</button>
            </div>
        </div>
        {{/each}}
        <div class="cart-buttons">
            <button onclick="vaciarCarrito('{{cartId}}')" class="btn btn-danger">Vaciar Carrito</button>
            <form method="post" action="/api/carts/{{cartId}}/purchase">
                <button type="submit" class="btn btn-success">Finalizar Compra</button>
            </form>
        </div>
        <h3 class="cart-total">Total de la compra: ${{totalCompra}}</h3>
    {{else}}
        <p class="text-center">Tu carrito está tan vacío como una nevera los lunes. ¡Vamos de compras!</p>
        <div class="text-center">
            <button onclick="window.location.href='/products'" class="btn btn-primary">Volver a la tienda</button>
        </div>
    {{/if}}
</div>

<script src="/js/cart.js"></script>
