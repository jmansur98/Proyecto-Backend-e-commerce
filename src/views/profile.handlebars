<body>
    <div class="container">
        <div class="profile-container">
            <h1>Mi Perfil</h1>
            <div class="profile-card">
                <p>Bienvenido, {{user.nombre}} {{user.apellido}}!</p>
                <p>Rol: {{user.role}}</p>
                <form action="/api/users/logout" method="POST">
                    <button class="btn btn-primary btn-logout" type="submit">Logout</button>
                </form>
                {{#if this.isAdmin}}
                <a class="btn btn-secondary" href="/realtimeproducts">Modificar Productos</a>
                {{else}}
                <a class="btn btn-secondary" href="/chat">Chat en vivo</a>
                <a class="btn btn-secondary" href="/products">Tienda</a>
                {{/if}}
            </div>
        </div>
    </div>
</body>