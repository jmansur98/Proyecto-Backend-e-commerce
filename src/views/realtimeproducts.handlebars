 <div class="container">
        <header class="header">
            <h1>Real Time Products</h1>
            <h2>Productos actualizados en tiempo real</h2>
        </header>

        <section class="user-info">
            <h3 id="role">{{role}}</h3>
            <h3 id="email">{{email}}</h3>
        </section>

        <section class="product-list" id="contenedorProductos">
            <!-- Los productos se insertarán aquí dinámicamente -->
        </section>

        <section class="product-form">
            <h2>Formulario para agregar productos</h2>
            {{#if isAdmin}}
            <form>
                <div class="form-group">
                    <input type="text" id="title" placeholder="Título">
                </div>
                <div class="form-group">
                    <input type="text" id="description" placeholder="Descripción">
                </div>
                <div class="form-group">
                    <input type="number" id="price" placeholder="Precio">
                </div>
                <div class="form-group">
                    <input type="text" id="img" value="Imagen">
                </div>
                <div class="form-group">
                    <input type="text" id="code" placeholder="Código">
                </div>
                <div class="form-group">
                    <input type="number" id="stock" placeholder="Stock">
                </div>
                <div class="form-group">
                    <input type="text" id="category" placeholder="Categoría"> 
                </div>
                <div class="form-group">
                    <select id="status">
                        <option value="true">Activo</option>
                        <option value="false">Inactivo</option>
                    </select>
                </div>
                <button type="button" id="btnEnviar">Enviar</button>
            </form>
            {{else}}
            <p>No tienes permisos para agregar productos.</p>
            {{/if}}
        </section>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.socket.io/4.7.4/socket.io.min.js"></script>
    <script src="js/realtime.js"></script>
</body>
</html>
